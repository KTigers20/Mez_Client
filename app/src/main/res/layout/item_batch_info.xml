<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="15dp"
        android:elevation="4dp"
        android:background="@drawable/background_item_batch_info">

        <TextView
            android:id="@+id/status_tv"
            android:textColor="@color/kbRed"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Success" />

        <TextView
            android:id="@+id/batch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/kbTextColor"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SPBD0542_S02" />

        <TextView
            android:id="@+id/dept_and_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/kbTextColor"
            android:textSize="15sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/batch_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="비즈니스개발부 / 김도균" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="24dp"
            android:textColor="@color/kbTextColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="시작 시간 : 2020/08/12/ 14:04:17" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>